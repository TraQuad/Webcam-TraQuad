    <TextView
        android:id="@+id/introTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/introducation" />

    <Button
        android:id="@+id/backgroundButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="@string/run_background"
        android:onClick="onButtonClick" />

    <Button
        android:id="@+id/foregroundButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/backgroundButton"
        android:layout_alignParentLeft="true"
        android:text="@string/run_foreground"
        android:onClick="onButtonClick" />

    <Button
        android:id="@+id/settingsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/foregroundButton"
        android:layout_alignParentLeft="true"
        android:text="@string/settings"
        android:onClick="onButtonClick" />

    <Button
        android:id="@+id/setupButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Setup"
        android:onClick="onButtonClick"
        android:layout_above="@+id/settingsButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/licenceButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Licence"
        android:onClick="onButtonClick"
        android:layout_above="@+id/setupButton"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
